# Infra
DOMAIN=whatsapp-brain.seudominio.com
DB_PASS=senha_super_secreta
WEBHOOK_SECRET=hmac_secret_para_go_whatsapp

# AI Model
# Formato: "provider:model-name" - pydantic-ai resolve o provider automaticamente
# Exemplos: "anthropic:claude-sonnet-4-6", "openai:gpt-4o", "google-gla:gemini-2.0-flash"
AI_MODEL=anthropic:claude-sonnet-4-6

# API Keys - o pydantic-ai lê automaticamente conforme o provider do AI_MODEL
ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...          # necessário se AI_MODEL=openai:...
# GOOGLE_API_KEY=...             # necessário se AI_MODEL=google-gla:...

# Alexa
ALEXA_SKILL_ID=amzn1.ask.skill.xxx
ALEXA_CLIENT_ID=amzn1.application-oa2-client.xxx
ALEXA_CLIENT_SECRET=xxx
ALEXA_USER_ID=amzn1.ask.account.xxx   # user ID para proactive events

# Features
WHISPER_ENABLED=true
WHISPER_MODEL=small                    # tiny | base | small | medium
PUBLIC_BASE_URL=https://whatsapp-brain.seudominio.com